libILU_la_CFLAGS = $(AM_CFLAGS) @ILU_CFLAGS@
libILU_la_SOURCES =\
	$(ilu_src)/ilu_alloc.c\
	$(ilu_src)/ilu_internal.c\
	$(ilu_src)/ilu_noise.c\
	$(ilu_src)/ilu_scale.c\
	$(ilu_src)/ilu_main.c\
